{
    "name": "whydotco/tutor-automation-pro",
    "description": "Advanced automation for Tutor LMS and WooCommerce Subscriptions.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "brain/monkey": "^2.6",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "WhydotCo\\TutorAutomation\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src",
        "lint": "phpcs --standard=WordPress src"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
